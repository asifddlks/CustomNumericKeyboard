<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CustomNumericKeyboard" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/color_primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="DayBaseWhiteNightBlackBGTintStyle">
        <item name="android:backgroundTint">@color/baseWhite</item>
    </style>

    <style name="DayNightCustomNumberKeyboardButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="layout_constraintDimensionRatio">104:48</item>
        <item name="android:background">@drawable/ripple_bg_gray_lightest_stroke_0dp_corner_radius_25dp</item>
        <item name="backgroundTint">@color/gray_lightest</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">@dimen/dp_28</item>
        <item name="fontFamily">@font/sf_pro_text_regular</item>
    </style>


    <dimen name="dp_28">28dp</dimen>
</resources>